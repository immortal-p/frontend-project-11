{
  "extends": [
    "eslint:recommended"
  ],
  "plugins": ["import"],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "scss": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".scss"]
      }
    }
  }
}